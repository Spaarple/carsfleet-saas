{% set route_name = app.request.attributes.get('_route') %}

<nav class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="{{ path('app_home') }}" class="flex items-center space-x-3 rtl:space-x-reverse">
            <img src="{{ asset('build/images/carsfleet-code-vanguard.png') }}" class="h-8" alt="Flowbite Logo">
            <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">CarsFleet</span>
        </a>
        <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
            <a href="{{ path('app_profile_index') }}" type="button"
                    class="transform hover:scale-110 transition-transform duration-200 hover:bg-neutral-800 text-body-sm font-semibold text-white bg-neutral-900 pl-5 pr-4  px-4 py-3 rounded-xl flex flex-row gap-2 items-center justify-center">
                Mon profil
            </a>
            <button data-collapse-toggle="navbar-sticky"
                    type="button"
                    class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                    aria-controls="navbar-sticky"
                    aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
                </svg>
            </button>
        </div>
        <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
            <ul class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                <li>
                    <a href="{{ path('app_car_index') }}" class="block text-gray-900 hover:text-gray-900 dark:text-gray-100 transform hover:scale-110 transition-transform duration-200
                    hover:bg-gray-100 dark:hover:text-gray-100 rounded-xl px-3 py-2 text-sm font-medium {% if route_name == "app_car_index" %} bg-neutral-700 text-white {% endif %}">
                        Emprunter un véhicule
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_borrow_passenger') }}" class="block text-gray-900 hover:text-gray-900 dark:text-gray-100 transform hover:scale-110 transition-transform duration-200
                    hover:bg-gray-100 dark:hover:text-gray-100 rounded-xl px-3 py-2 text-sm font-medium {% if route_name == "app_borrow_passenger" %} bg-neutral-700 text-white {% endif %}">
                        Participer à un trajet
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_borrow_history') }}" class="block text-gray-900 hover:text-gray-900 dark:text-gray-100 transform hover:scale-110 transition-transform duration-200
                    hover:bg-gray-100 dark:hover:text-gray-100 rounded-xl px-3 py-2 text-sm font-medium {% if route_name == "app_borrow_history" %} bg-neutral-700 text-white {% endif %}">
                        Historique des emprunts
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_accident_history') }}" class="block text-gray-900 hover:text-gray-900 dark:text-gray-100 transform hover:scale-110 transition-transform duration-200
                    hover:bg-gray-100 dark:hover:text-gray-100 rounded-xl px-3 py-2 text-sm font-medium {% if route_name == "app_accident_history" %} bg-neutral-700 text-white {% endif %}">
                        Historique des accidents
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>


