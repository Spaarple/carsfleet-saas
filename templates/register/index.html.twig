{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 mt-20">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h1 class="lg:text-display-xl md:text-display-lg text-display-md font-semibold text-center">
                Inscription
            </h1>
        </div>

        <div class="sm:mx-auto sm:w-full sm:max-w-3xl">
            {{ form_start(form) }}
            <div class="mt-5 grid grid-cols-1 gap-x-6 gap-y-2 sm:grid-cols-6">
                <div class="sm:col-span-3">
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                </div>
                <div class="sm:col-span-3">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.password) }}
                </div>
                <div class="sm:col-span-6">
                    <p class="md:text-display-xs text-body-xl font-semibold">Information concernant le Siège Social</p>
                </div>
                <div class="sm:col-span-3">
                    {{ form_row(form.headOffice.name) }}
                    {{ form_row(form.headOffice.postalCode) }}
                </div>
                <div class="sm:col-span-3">
                    {{ form_row(form.headOffice.region) }}
                    {{ form_row(form.headOffice.country) }}
                </div>
                <div class="sm:col-span-6">
                    {{ form_row(form.headOffice.address) }}
                </div>
            </div>

            <button class="hover:bg-neutral-800 text-body-sm font-semibold text-white bg-neutral-900
                        py-4 pl-5 pr-4 rounded-xl flex flex-row gap-2 items-center justify-center">
                S'inscrire
            </button>
            {{ form_end(form) }}

            <div class="text-center text-muted mt-3">
                Vous avez déjà un compte ?
                <a href="{{ path('app_login') }}" class="hover:underline" tabindex="-1">Se connecter</a>
            </div>
        </div>
    </div>
{% endblock %}