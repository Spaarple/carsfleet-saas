{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 mt-20">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h1 class="lg:text-display-xs md:text-display-lg text-display-md font-semibold text-center">
                Réinitialiser votre mot de passe
            </h1>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div class="flex flex-col items-center">
                <button class="hover:bg-neutral-800 text-body-sm font-semibold text-white bg-neutral-900
                            py-4 pl-5 pr-4 rounded-xl flex flex-row gap-2 items-center justify-center">
                    Demande de mot de passe oublié
                </button>
            </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}