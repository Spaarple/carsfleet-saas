{% extends 'base_app.html.twig' %}

{% block title %}Déclarer un accident{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Déclarer un accident
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Expliquer ce qu'il s'est passé</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    <div class="text-end">
                        <button type="submit" class="btn btn-success">Confirmer l'accident</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}