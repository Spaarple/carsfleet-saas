{% extends 'base_app.html.twig' %}

{% block title %}CarsFleet |Account Settings{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Paramètres du compte
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="row g-0">
                    {{ include('profile/_navigation_account.html.twig') }}
                    <div class="col-12 col-md-9 d-flex flex-column">
                        <div class="card-body">
                            <h2 class="mb-4">Mon compte</h2>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="first-name" class="form-label">Prénom</label>
                                    <input name="first-name" type="text" class="form-control"
                                           value="{{ app.user.firstName }}" disabled>
                                </div>
                                <div class="col-md-6">
                                    <label for="last-name" class="form-label">Nom de Famille</label>
                                    <input name="last-name" type="text" class="form-control"
                                           value="{{ app.user.lastName }}" disabled>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email</label>
                                    <input name="email" type="email" class="form-control"
                                           value="{{ app.user.email }}" disabled>
                                </div>
                                <div class="col-md-6">
                                    <label for="matricule" class="form-label">Matricule</label>
                                    <input name="matricule" type="email" class="form-control"
                                           value="{{ app.user.matricule }}" disabled>
                                </div>
                                <div class="col-md-6">
                                    <label for="service" class="form-label">Service</label>
                                    <input name="service" type="text" class="form-control"
                                           value="{{ app.user.service.name|lower }}" disabled/>
                                </div>
                                <div class="col-md-6">
                                    <label for="service" class="form-label">Site</label>
                                    <input name="service" type="text" class="form-control"
                                           value="{{ app.user.site.name }}" disabled/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" disabled
                                               {{ app.user.drivingLicense is same as true ? 'checked' : '' }}>
                                        <span class="form-check-label">Permis de conduire (B)</span>
                                    </label>
                                </div>
                                <div>
                                    <a href="{{ path('app_profile_edit_profile') }}" class="btn btn-lime float-end">
                                        Modifier le profil
                                    </a>
                                </div>
                            </div>
                            <h3 class="card-title mt-4">Mot de passe</h3>
                            <p class="card-subtitle">Vous pouvez définir un nouveau mot de passe pour accéder à votre compte.</p>
                            <div>
                                <a href="{{ path('app_profile_change_password') }}" class="btn">
                                    Changer le mot de passe
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}