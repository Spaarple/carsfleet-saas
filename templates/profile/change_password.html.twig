{% extends 'base_app.html.twig' %}

{% block title %}CarsFleet | Modifier votre mot de passe{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Param√®tres du compte
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="row g-0">
                    {{ include('profile/_navigation_account.html.twig') }}
                    <div class="col-12 col-md-9 d-flex flex-column">
                        <div class="card-body">
                            <h2 class="mb-4">Modifier votre mot de passe</h2>
                            <div class="row g-3">
                                {{ form_start(form) }}
                                {{ form_row(form.oldPassword) }}
                                {{ form_row(form.newPassword.first) }}
                                {{ form_row(form.newPassword.second) }}
                                <div>
                                    <button type="submit" class="btn btn-lime float-end">
                                        Changer le mot de passe
                                    </button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}