{% set route_name = app.request.attributes.get('_route') %}

<div class="col-12 col-md-3 border-end">
    <div class="card-body">
        <h4 class="subheader">Votre compte</h4>
        <div class="list-group list-group-transparent">
            <a href="{{ path('app_profile_index') }}"
               class="list-group-item list-group-item-action d-flex align-items-center {% if route_name == "app_profile_index" %} active {% endif %}">
               Prévisualisation du compte
            </a>
            <a href="{{ path('app_profile_change_password') }}"
               class="list-group-item list-group-item-action d-flex align-items-center {% if route_name == "app_profile_change_password" %} active {% endif %}">
                Changer de mot de passe
            </a>
            <a href="{{ path('app_profile_edit_profile') }}"
               class="list-group-item list-group-item-action d-flex align-items-center {% if route_name == "app_profile_edit_profile" %} active {% endif %}">
                Mettre à jour son profil
            </a>

            <a href="{{ path('app_logout') }}"
               class="list-group-item list-group-item-action d-flex align-items-center text-danger">
                Se déconnecter
            </a>
        </div>
    </div>
</div>